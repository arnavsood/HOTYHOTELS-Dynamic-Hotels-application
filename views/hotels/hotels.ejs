<%include ../partials/header.ejs%>


<div class="container">
    <div class="jumbotron">
       <div class="container">
           <h1>   Personal Vacation Buddy</h1> 
           <p>These are the Best Hotels in Chandigarh </p>
              <a href="/hotels/new"><button class=" btn btn-primary">Create New Hotel</button></a>
        </div>
    </div>
        
 <!--*********************************************************************************************************************************************-->       
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
         <div class="col-lg-12 col-xs-12 text-center">
             <h1 class="page-header"> Top picks</h1>
        </div>   
        <%for(var i=0;i<hotels.length;i++){%>
            <div class="col-md-3 col-sm-6 ">
                <div class="thumbnail " >
                    <img src="<%=hotels[i].image%>" style="height:200px">  
                    <div class="caption" >
                        <h4> <%=hotels[i].name%></h4> 
                        <a href="/hotels/<%=hotels[i]._id%>"><button class="btn btn-primary">More Info</button></a> 
                    </div>
                </div>
            </div>    
        <% }; %>

    </div>            
</div>
     




