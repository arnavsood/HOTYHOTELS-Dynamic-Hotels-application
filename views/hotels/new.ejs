<%include ../partials/header.ejs%>

<div class="container">
    <div class="jumbotron">
       <div class="container">
          <h1>Add a New Hotel</h1>
        </div>
    </div>
    <form action="/hotels" method="post">
        <div class="form-group">
             <input class="form-control" type="text" name="name" placeholder="name">
            
        </div>
       
        <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="image">
        </div>
          <div class="form-group">
            <input class="form-control" type="number" name="price" placeholder="price" min=250 step=50>
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
        </div>
        <div class="form-group">
             <textarea class="form-control"  name="description" > description</textarea>
        </div>
       
        <div>
            <button cls="btn btn-lg btn-primary btn-block">Create</button>
        </div>
        
        
    </form>






